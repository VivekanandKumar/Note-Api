<%- include('partials/header') %>
<div class="container mx-auto p-6">
    <div class="rounded-md shadow-md w-full md:w-1/2 lg:w-1/3 mx-auto my-12 py-8 px-10">
        <h1 class="text-lg font-bold">Forgot Password</h1>
        <div class="form flex flex-col mt-4">
            <input type="email" id="forgotemail"
                class=" px-4 py-3 w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 text-sm"
                placeholder="Email" />
            <button id="send-email"
                class="bg-gray-700 mt-4 px-4 py-3 leading-6 text-base rounded-md border border-transparent text-white focus:outline-none bg-blue-500 text-blue-100 hover:text-white focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer inline-flex items-center w-full justify-center items-center font-medium focus:outline-none">
                Send Code
            </button>
            <div class="codeverify" style="display: none;">
                <input maxlength="6" type="text" id="otpcode"
                    class="mt-4 px-4 py-3 w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 text-sm"
                    placeholder="OTP Code" />
                <input type="text" id="newpassword"
                    class="mt-4 px-4 py-3 w-full rounded-md bg-gray-100 border-transparent focus:border-gray-500 focus:bg-white focus:ring-0 text-sm"
                    placeholder="New Password" />
                <button id="verifyCode"
                    class="mt-4 px-4 py-3  leading-6 text-base rounded-md border border-transparent text-white focus:outline-none bg-blue-500 text-blue-100 hover:text-white focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer inline-flex items-center w-full justify-center items-center font-medium focus:outline-none">
                    Submit
                </button>
            </div>
        </div>
    </div>
</div>
<%- include('partials/footer') %>